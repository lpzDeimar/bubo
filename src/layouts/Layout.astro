---
import Header from '../components/Header.astro';
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		
		<!-- SEO Meta Tags -->
		<title>Bubo | Manicura y Uñas Profesionales en Madrid, Cundinamarca</title>
		<meta name="description" content="Servicio profesional de manicura y uñas en Madrid, Cundinamarca. Especialistas en uñas acrílicas, poligel, semipermanentes, pedicura y pestañas. Técnica en seco, higiénica y segura. ¡Agenda tu cita!" />
		<meta name="keywords" content="manicura madrid cundinamarca, uñas acrílicas, uñas poligel, uñas semipermanentes, pedicura, pestañas, salon de uñas, bubo, manicura en seco, uñas press on" />
		<meta name="author" content="Bubo" />
		<meta name="robots" content="index, follow" />
		<meta name="language" content="Spanish" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://bubo.plus/" />
		<meta property="og:title" content="Bubo | Manicura Profesional en Madrid" />
		<meta property="og:description" content="Servicio profesional de manicura y uñas en Madrid, Cundinamarca. Especialistas en uñas acrílicas, poligel y semipermanentes. ¡Agenda tu cita!" />
		<meta property="og:image" content="/og-image.jpg" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://bubo.plus/" />
		<meta property="twitter:title" content="Bubo | Manicura Profesional en Madrid" />
		<meta property="twitter:description" content="Servicio profesional de manicura y uñas en Madrid, Cundinamarca. Especialistas en uñas acrílicas, poligel y semipermanentes." />
		<meta property="twitter:image" content="/og-image.jpg" />

		<!-- Geo Tags -->
		<meta name="geo.region" content="CO-CUN" />
		<meta name="geo.placename" content="Madrid" />
		<meta name="geo.position" content="4.7323328865432;-74.27741445511796" />
		<meta name="ICBM" content="4.7323328865432, -74.27741445511796" />

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Poiret+One&display=swap" rel="stylesheet">

		<!-- Favicons -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

		<!-- Canonical URL -->
		<link rel="canonical" href="https://bubo.plus/" />
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>

<style is:global>
	* {
		box-sizing: border-box;
	}
	html{
		scroll-behavior: smooth;
		box-sizing: border-box;
	}
	body {
		background-color: #f5f5f5;
		display: flex;
		flex-direction: column;
		align-items: center;
		box-sizing: border-box;
	}
	* ::selection {
		background: #2872339e;
		color: white;
	}
</style>

<style>
	html,
	body {
		width: 100%;
		height: 100%;
		margin: 0 auto;
		font-family: "Poiret One", sans-serif;
		font-weight: 400;
		font-style: normal;
	}
</style>

