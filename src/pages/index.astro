			margin-right: 20px;
			grid-template-columns: 1fr;

			h2{
				color: #5a5a5a;
			}

			.tecnica-manicura-text {
				padding: 0 20px;
			}

			.tecnica-manicura-image {

				img {
					object-fit: cover;
					width: 100%;
					height: 320px;
					padding: 0 20px;
				}
			}
		}
	}

	.servicios {
		margin: 30px 0;
		scroll-margin-top: 140px;

		.servicios-title {
			font-size: 40px;
			margin-bottom: 0;
			color: #5a5a5a;

			@media (max-width: 768px) {
				text-align: center;
			}
		}

		.servicios-subtitle {
			font-size: 20px;
			color: #5a5a5a;
			margin-top: 0;
			font-family: "Montserrat", sans-serif;

			@media (max-width: 768px) {
				padding-left: 20px;
			}
		}


		.swiper {
			width: 24rem;
			margin: 0 auto;
			padding-bottom: 40px;
			--swiper-theme-color: #287233;
			--swiper-pagination-color: #287233;
			--swiper-pagination-bullet-inactive-color: #d4d4d4;
			--swiper-pagination-bullet-inactive-opacity: 1;
			--swiper-pagination-bullet-size: 8px;
			--swiper-pagination-bullet-horizontal-gap: 6px;

			@media (max-width: 768px) {
				width: 80%;
			}
		}

		.swiper-slide {
			border-radius: 18px;
		}

		.servicios-lista{
			display: grid;
			grid-template-columns: repeat(2, 1fr);
			gap: 120px;
			row-gap: 10px;
			align-items: center;
			justify-content: center;
			color: #287233;
			border-radius: 15px;
