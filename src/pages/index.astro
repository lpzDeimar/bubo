	.contacto{
		background-color: #287233;
		width: 100%;
		text-align: center;
		padding: 20px;
		color: #fff;
		font-size: 20px;
		font-weight: bold;
		margin-top: 100px;

		@media (max-width: 768px) {
			max-width: 20%;
		}

		h2{
			font-size: 30px;
			margin-bottom: 0;
			margin-top: 0;

			@media (max-width: 768px) {
				font-size: 20px;
			}
		}

		p{
			font-size: 20px;
			color: rgba(255, 255, 255, 0.584);

			@media (max-width: 768px) {
				font-size: 16px;
			}
		}
		a{
			text-decoration: none;
			color: #fff;
			font-size: 25px;

			@media (max-width: 768px) {
				font-size: 16px;
			}
		}

		@media (max-width: 768px) {
			margin-left: 20px;
			margin-right: 20px;
			max-width: 100%;
			padding: 10px;
		}

	}
	.ubicacion {
		scroll-margin-top: 140px;
		width: 100%;
		margin-top: 100px;

		.ubicacion-text{
			text-align: center;
			h4{
				font-size: 30px;
				color: #287233;
				margin-bottom: 0;
				margin-top: 0;
			}
			p{
				font-family: "Montserrat", sans-serif;
				font-size: 16px;
				color: #5a5a5a;
			}
		}

		.mapa{
			margin: 50px 0;
			width: 100%;
		}
		
	}
	.footer{
		width: 100%;
		text-align: center;
		padding: 20px;
	}
</style>
